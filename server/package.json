{
	"name": "opening-tree-server",
	"version": "0.1.0",
	"private": true,
	"description": "Node TypeScript server to serve chess opening trees",
	"engines": {
		"node": ">=22.12.0"
	},
	"type": "module",
	"scripts": {
		"dev": "tsx src/server.ts",
		"build": "tsup src/server.ts --format esm --out-dir dist --sourcemap",
		"start": "node dist/server.js",
		"typecheck": "tsc --noEmit",
		"test": "vitest run",
		"lint": "biome check --fix --unsafe .",
		"format": "prettier --write \"src/**/*.ts\""
	},
	"dependencies": {
		"better-sqlite3": "^9.6.0",
		"fastify": "^4.28.1"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.3",
		"@types/better-sqlite3": "^7.6.13",
		"@types/node": "^22.8.6",
		"prettier": "^3.3.3",
		"tsx": "^4.19.2",
		"typescript": "^5.6.3",
		"vitest": "^2.1.4",
		"tsup": "^7.3.0"
	},
	"packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
